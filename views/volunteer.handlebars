        <h6 class="title">Unassigned Pets</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <form>
        <label class="form-check">
            {{#each name as |name|}}
            {{!-- {{#if unassignedPets as |unassignedPets| how to make this if arguement with null}} --}}
          <input onclick="filterClick(this.value, this.checked, this.name)" class="form-check-input" type="checkbox" name="name={{name}}" id='name'>
          <span class="form-check-label">
            {{name}}
            </span>
            <br>
            {{!-- {{/if}} --}}
            {{/each}}
        </label> <!-- form-check.// -->
