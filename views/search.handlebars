<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MeowWoof</title>
  <link rel="stylesheet" type="text/css" href="/css/jass.css">
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.3/dist/flowbite.min.css" />
</head>

<section class="row" id="filter">
      <div class=" col-3 card">
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Species</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <form>
        <label class="form-check">
            {{#each uniquespecies as |species|}}
          <input class="form-check-input" type="checkbox" name="species={{species}}" id='species'>
          <span class="form-check-label">
            {{species}}
            </span>
            <br>
            {{/each}}
        </label> <!-- form-check.// -->
        </form>

    </article> <!-- card-group-item.// -->
    
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Breed</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquebreeds as |breed|}}
          <input onclick="filterClick(this.value, this.checked)" class="form-check-input" type="checkbox" name="breed={{breed}}" id='breed' value="{{breed}}">
          <span class="form-check-label">
            {{breed}}
            </span>
            <br>
            {{/each}}
        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Gender</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquegenders as |gender|}}
          <input onclick="filterClick(this.value, this.checked)" class="form-check-input" type="checkbox" name="gender={{gender}}" id='gender' value="{{gender}}">
          <span class="form-check-label">
          {{gender}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Age</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniqueages as |age|}}
          <input onclick="filterClick(this.value, this.checked)" class="form-check-input" type="checkbox" name="age={{age}}" id='age' value="{{age}}">
          <span class="form-check-label">
            {{age}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Size</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquesizes as |size|}}
          <input onclick="filterClick(this.value, this.checked)" class="form-check-input" type="checkbox" name="size={{size}}" id='size' value="{{size}}">
          <span class="form-check-label">
            {{size}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <div class="input-group">
  <button type="submit" class="btn btn-outline-primary" id="applyfilter">Apply</button>
</div>
  </div> 
  <main class="col-9">
   {{!-- {{#each animalcard as |animal|}} --}}
        {{>animalcard}}
        
    {{!-- {{/each}} --}}
  
    {{body}}
    </main>
</section>

