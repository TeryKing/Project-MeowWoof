<section class ="row">
<aside class='col-md'>
      <div class="card">
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Pet Type</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <form>
          <label class="form-check">
            <input class="form-check-input" name="species=dog" type="checkbox" id='dog'>
            <span class="form-check-label">
              Dog
            </span>
          </label> <!-- form-check.// -->
          <label class="form-check">
            <input class="form-check-input" name="species=cat"type="checkbox" id='cat'>
            <span class="form-check-label">
              Cat
            </span>
          </label>  <!-- form-check.// -->
        </form>

    </article> <!-- card-group-item.// -->
    
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Breed</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquebreeds as |breed|}}
          <input class="form-check-input" type="checkbox" name="breed={{breed}}" id='breed'>
          <span class="form-check-label">
            {{breed}}
            </span>
            <br>
            {{/each}}
{{!-- copy this ^ to age gender size --}}

        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Gender</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquegenders as |gender|}}
          <input class="form-check-input" type="checkbox" name="gender={{gender}}" id='gender'>
          <span class="form-check-label">
          {{gender}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Age</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniqueages as |age|}}
          <input class="form-check-input" type="checkbox" name="age={{age}}" id='age'>
          <span class="form-check-label">
            {{age}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <article class="card-group-item">
      <header class="card-header">
        <h6 class="title">Size</h6>
      </header>
      <div class="filter-content">
        <div class="card-body">
        <label class="form-check">
            {{#each uniquesizes as |size|}}
          <input class="form-check-input" type="checkbox" name="size={{size}}" id='size'>
          <span class="form-check-label">
            {{size}}
          </span>
          <br>
            {{/each}}

        </label>
        </div>
      </div>
    </article>
    <div class="input-group">
  <button type="submit" class="btn btn-outline-primary" id="applyfilter">Apply</button>
</div>
  </div>
</aside>
</section>
