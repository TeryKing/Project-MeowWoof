  <div class="flex flex-wrap justify-around gap-6 m-6">
    <div>
      {{>homepageAnimalCard residentOne loggedIn=logged_in}}
    </div>
    
    <div>
      {{>homepageAnimalCard residentTwo loggedIn=logged_in}}
    </div>

    <div>
      {{>homepageAnimalCard residentThree loggedIn=logged_in}}
    </div>
  </div>
</section>

